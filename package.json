  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "eslint": "^9.29.0",
    "husky": "^8.0.0",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.1",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.34.0"
